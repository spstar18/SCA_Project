<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_alarm_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주기~"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:textSize="32dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_alarm_cycle"
        app:layout_constraintLeft_toLeftOf="@+id/item_alarm_cycle"/>

    <TextView
        android:id="@+id/item_alarm_pmam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AM"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/item_alarm_time"
        app:layout_constraintBottom_toBottomOf="@+id/item_alarm_time"
        />

    <TextView
        android:id="@+id/item_alarm_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람 메시지"
        app:layout_constraintTop_toBottomOf="@+id/item_alarm_time"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Switch
        android:id="@+id/alarm_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>