<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <TextView
        android:id="@+id/item_qna_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="제목"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/item_qna_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/item_qna_title"
        app:layout_constraintBottom_toBottomOf="@+id/item_qna_title"
        app:layout_constraintLeft_toRightOf="@+id/item_qna_title"
        android:layout_marginLeft="4dp"
        android:text="본문내용이닫아ㅏㅇ아ㅏ"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_qna_viewnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="18"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="12px"
        android:layout_height="12px"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintRight_toLeftOf="@+id/item_qna_viewnum"
        app:layout_constraintTop_toTopOf="parent"
        android:foregroundTint="@color/black"/>






</androidx.constraintlayout.widget.ConstraintLayout>