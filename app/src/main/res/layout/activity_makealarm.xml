<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".makealarmActivity"
    android:padding="32dp">

    <TimePicker
        android:id="@+id/makealarm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/makealarm_time"
        android:layout_marginTop="16dp">

        <ToggleButton
            android:id="@+id/toggle_sun"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="일"
            android:textOn="일"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggle_mon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="월"
            android:textOn="월"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggle_tue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="화"
            android:textOn="화"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggle_wed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="수"
            android:textOn="수"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggle_thu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="목"
            android:textOn="목"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggle_fri"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="금"
            android:textOn="금"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggle_sat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="토"
            android:textOn="토"
            android:layout_weight="1"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>